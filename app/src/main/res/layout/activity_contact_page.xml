<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:padding="40dp"
    android:weightSum="10"
    tools:context=".ContactPage"
    android:orientation="vertical"

    android:background="#232323">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1.5"
    android:weightSum="3"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView2"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"

        android:fontFamily="@font/montserrat"
android:textStyle="bold"
        android:text="AASC"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@android:color/white"

        android:textSize="20dp"
        android:fontFamily="@font/montserrat"
        android:text="AviralAkashShubhChitransh"
/>

</LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mapView"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"

    />

<LinearLayout
    android:layout_width="match_parent"
    android:padding="30dp"
    android:layout_height="0dp"
    android:layout_weight="5"
    android:weightSum="4"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:gravity="center"
        android:autoSizeStepGranularity="2sp"
        android:text="Enter a suggestion"
        android:textColor="#d8d6d8"
        android:autoSizeTextType="uniform"
android:autoSizeMaxTextSize="26sp"
        android:autoSizeMinTextSize="18sp"
        android:textStyle="bold"

        android:fontFamily="@font/montserrat"
 />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
    <EditText
        android:id="@+id/usr_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollX="40dp"
        android:textColor="#fff"
        android:hint="Enter Message"

        android:fontFamily="@font/montserrat"
        android:textColorHint="#d8d6d8"
        android:layout_gravity="center_horizontal"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">
        <Button
        android:id="@+id/btn_snd_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:autoSizeMaxTextSize="14dp"
            android:autoSizeMinTextSize="10dp"
            android:autoSizeStepGranularity="2dp"
            android:autoSizeTextType="uniform"
android:textStyle="bold"
android:layout_gravity="center_horizontal"
        android:background="@drawable/custom_send_message"
        android:drawableLeft="@drawable/ic_whatsapp_icon"
        android:fontFamily="@font/montserrat"
    android:paddingLeft="10dp"
            android:paddingRight="10dp"

        android:drawablePadding="10dp"
        android:text="Send Message"

        android:textAllCaps="false"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/contribute"
    android:background="@drawable/custom_button_1"
    android:text="Wish To Contribute?"
    android:textAllCaps="false"

    android:layout_gravity="center_horizontal"
    android:textSize="16sp"
    android:fontFamily="@font/montserrat"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    />
    </LinearLayout>

</LinearLayout>
</LinearLayout>