    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="2"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
          android:weightSum="5"
            android:background="@drawable/card_background"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="50dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/top_left_corner_white"
                    android:textColor="#232323"
                    android:text="First Year"
                    android:fontFamily="@font/montserrat"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="26sp"
                    android:autoSizeMinTextSize="16sp"
                    android:autoSizeStepGranularity="2sp"
                    android:textStyle="bold"
                    android:id="@+id/firstYearVideos"
                    android:gravity="center_vertical|center_horizontal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/bottom_left_corner_white"
                    android:textColor="#6b6b6b"
                    android:text="A curated playlist for to the point and precise videos"
                    android:fontFamily="@font/montserrat"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="22sp"
                    android:autoSizeMinTextSize="16sp"
                    android:autoSizeStepGranularity="2sp"
                    android:gravity="top|center_horizontal"
                    android:id="@+id/firstYearVideos2"/>


            </LinearLayout>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/top_bottom_right_corner_white"
                android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                android:gravity="center"
                android:id="@+id/firstYearVideos3"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
