                    android:layout_weight="2"
                    android:background="@drawable/top_left_corner_white"
                    android:textColor="#232323"
                    android:text="Second Year"
                    android:fontFamily="@font/montserrat"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="26sp"
                    android:autoSizeMinTextSize="16sp"
                    android:autoSizeStepGranularity="2sp"
                    android:textStyle="bold"
                    android:id="@+id/secondYearVideos"
                    android:gravity="center_vertical|center_horizontal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/bottom_left_corner_white"
                    android:textColor="#6b6b6b"
                    android:text="Trying our best... playlist will be released soon"
                    android:fontFamily="@font/montserrat"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="22sp"
                    android:autoSizeMinTextSize="16sp"
                    android:autoSizeStepGranularity="2sp"
                    android:gravity="top|center_horizontal"
                    android:id="@+id/secondYearVideos2"/>


            </LinearLayout>
            <Button
